<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cloud.framework.auth.dal.AccountUserMapper">
    <resultMap id="queryPageMap" type="com.cloud.framework.model.auth.result.UserInfoListQueryDTO">
        <id column="id" property="staffId" />
        <result column="name" property="staffName"/>
        <result column="nickname" property="nickName" />
        <result column="status" property="status"/>
        <result column="create_time" property="createTime" />
        <result column="last_login_time" property="lastLoginTime" />
    </resultMap>

    <resultMap id="queryDetailMap" type="com.cloud.framework.model.auth.result.UserInfoDetailDTO">
        <id column="id" property="staffId" />
        <result column="name" property="staffName"/>
        <result column="nickname" property="nickName" />
        <result column="status" property="status"/>
        <result column="create_time" property="createTime" />
        <result column="last_login_time" property="lastLoginTime" />
        <result column="phone" property="phone" />
        <result column="email" property="email" />
        <result column="staff_image" property="staffImage" />
        <result column="gender" property="gender" />
        <result column="role_name" property="roleName" />
    </resultMap>


    <delete id="deleteListAccountUserById" parameterType="java.util.List">
        delete from account_user where id in
        <foreach collection="list" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <select id="queryPage" parameterType="com.cloud.framework.auth.pojo.request.QueryUserReuqest" resultMap="queryPageMap">
        SELECT
        si.id
        si.name ,
        si.nickname,
        au.status,
        au.create_time,
        au.last_login_time
        FROM
        account_user au
        JOIN
        staff_info si ON au.id = si.uid
        <where>
            <if test="staffName !=null and staffName != ''">
                si.name = #{staffName}
            </if>
            <if test="status !=null and status != ''">
                si.name = #{status}
            </if>
        </where>
    </select>

    <select id="queryUserInfoDetail" parameterType="java.lang.Integer" resultMap="queryDetailMap">
        SELECT
        si.id,
        si.name,
        si.nickname,
        si.staff_image,
        si.gender,
        si.role_name,
        au.status,
        au.create_time,
        au.last_login_time,
        au.email,
        au.phone
        FROM
        account_user au
        JOIN
        staff_info si ON au.id = si.uid
        where si.id = #{staffId}
    </select>


    <select id="queryUserInfoDetailByEmail" parameterType="java.lang.String" resultMap="queryDetailMap">
        SELECT
        si.id,
        si.name,
        si.nickname,
        si.staff_image,
        si.gender,
        si.role_name,
        au.status,
        au.create_time,
        au.last_login_time,
        au.email,
        au.phone
        FROM
        account_user au
        JOIN
        staff_info si ON au.id = si.uid
        where au.email=#{email}
    </select>
</mapper>